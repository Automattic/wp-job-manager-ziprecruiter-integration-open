{
  "name"       : "automattic/wp-job-manager-ziprecruiter-integration",
  "homepage"   : "http://wpjobmanager.com/",
  "type"       : "wordpress-plugin",
  "license"    : "GPL-3.0+",
  "require-dev"    : {
    "phpunit/phpunit": "^7.0",
    "dealerdirect/phpcodesniffer-composer-installer": "0.4.4",
    "phpcompatibility/phpcompatibility-wp": "2.1.0",
    "squizlabs/php_codesniffer": "3.5.6",
    "wp-coding-standards/wpcs": "2.3.0"
  },
  "archive": {
    "exclude": [
      "/*",
      "!/assets/dist",
      "/assets/dist/css/*.js",
      "!/languages",
      "!/includes",
      "!/templates",
      "!/changelog.txt",
      "!/LICENSE",
      "!/readme.txt",
      "!/uninstall.php",
      "!/wp-job-manager-ziprecruiter-integration.php",
      ".DS_Store",
      ".*",
      "*.test.js"
    ]
  }
}
